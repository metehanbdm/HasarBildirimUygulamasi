<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView

        android:id="@+id/cardview_history"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        card_view:cardCornerRadius="15dp"
        card_view:cardBackgroundColor="#795548"
        card_view:cardElevation="9dp"
        android:onClick="onClick"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/cardview_photo_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="start"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:text="Önceki Gönderileri Görmek İçin Tıklayın"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_stat_history" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>